{
  "name": "mosca-broker",
  "version": "1.0.0",
  "description": "MQTT broker using Mosca",
  "main": "dist/app.js",
  "scripts": {
    "start": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/app.ts",
    "build-ts": "tsc",
    "tslint": "tslint -c tslint.json -p tsconfig.json -t verbose",
    "serve": "node dist/app.js",
    "build": "npm run tslint && npm run build-ts"
  },
  "engines": {
    "node": "8.x.x",
    "npm": "5.x.x"
  },
  "author": "Dhian Pratama",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/node": "^10.14.6",
    "@types/shelljs": "^0.8.5",
    "nodemon": "^1.19.0",
    "shelljs": "^0.8.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "mosca": "^2.8.3",
    "node-graceful": "^0.3.1",
    "redis": "^2.8.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^5.5.2",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  }
}
